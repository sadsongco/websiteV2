<section class="resource">
    <h2>{{name}}</h2>
    {{#resources}}
        {{^playlists}}
            <div class="resourceItem">
                {{#img_preview}}
                    <img src="{{path}}thumbnail/{{resource}}" alt="Thumbnail image of {{resource}}" {{#thumbnail_size}}{{{3}}}{{/thumbnail_size}}/>
                    <br />
                    <a href="{{path}}full_res/{{resource}}" target="_blank">Download at print resolution</a> {{#full_res_size}}({{0}} x {{1}}, 300dpi){{/full_res_size}}
                    &nbsp;||&nbsp;
                    <a href="{{path}}web/{{resource}}" target="_blank">Download at web resolution</a> {{#web_size}}({{0}} x {{1}}, 72dpi){{/web_size}}
                    {{#photo_credit}}
                        <br />Please credit photo to {{{photo_credit}}}
                    {{/photo_credit}}
                {{/img_preview}}
                {{^img_preview}}
                    <a href="{{path}}{{resource}}" target="_blank">
                        {{#logo_preview}}
                            <img src="{{path}}{{resource}}" width="200" alt="image of {{resource}}" /><br />
                        {{/logo_preview}}
                        {{resource}}<br />
                    </a>
                    {{#logo_size}}({{0}}px x {{1}}px){{/logo_size}}
                {{/img_preview}}
            </div>
        {{/playlists}}
        {{#playlists}}
            <div class="resourceItem">
                {{>playlist}}
            </div>
        {{/playlists}}
    {{/resources}}
</section>